<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.handerson.smsgpscontrol.MainInicial">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="#FFA500"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editText_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#000"
            android:layout_above="@+id/button_aceitar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp" />

        <Button
            android:id="@+id/button_aceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="OK"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300px"
            android:layout_height="194px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/logoprincipal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText_numero"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="Número Gps Trace"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/editText_numero"
            android:layout_alignStart="@+id/editText_numero" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_nome"
            android:layout_centerHorizontal="true"
            android:text="Senha"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText_numero"
            android:layout_alignRight="@+id/editText_numero"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="8" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
